<Page x:Class="PDV_ORCAMENTO.NovoACI.Assist_Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PDV_ORCAMENTO.NovoACI"
      mc:Ignorable="d" 
      Title="Assist_Inicio" HorizontalAlignment="Left" VerticalAlignment="Top" >

    <DockPanel Height="406" Width="493">
        <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" Margin="15,15,15,10" FontSize="17" FontFamily="Open Sans" Height="342"><Run Text="BEM VINDO AO"/><LineBreak/><Run FontWeight="Bold" Text="ASSISTENTE DE CONFIGURAÇÃO  DE IMPRESSORA"/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run FontSize="14" Text="O Ambi Orçamento pode ser utilizado com impressoras térmicas 80mm e impressoras de escritório (A4), ambas USB."/><LineBreak/><Run FontSize="14"/><LineBreak/><Run FontSize="14" Text="Através deste assistente iremos configurar"/><Run FontSize="14" Text=" o sistema e a sua impressora, garantindo o bom funcionamento do sistema."/><LineBreak/><Run FontSize="14"/><LineBreak/><Run FontSize="14" Text="Antes de começarmos, garanta que sua impressora esteja ligada na tomada e desconectada do seu computador."/><LineBreak/><Run FontSize="14"/><LineBreak/><Run FontWeight="Bold" FontSize="14" Text="Se acha que está pronto... Clique em começar!!"/></TextBlock>
        <UniformGrid DockPanel.Dock="Bottom" Columns="3" VerticalAlignment="Center" Margin="10,0">
            <Border Grid.Column="0" Background="White" x:Name="but_Prev" Padding="15,4" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="but_Prev_MouseDown">
                <TextBlock Foreground="#FF09CAAA" VerticalAlignment="Center" HorizontalAlignment="Left"><Run FontSize="22" FontFamily="Wingdings" Text="×" x:Name="icn_Prev"/><Run FontSize="20" FontFamily="Open Sans" Text=" "/><Run FontSize="20" FontFamily="Open Sans" Text="Cancelar" x:Name="lbl_Prev"/></TextBlock>
            </Border>
            <Border Grid.Column="1" Background="#FF09CAAA" x:Name="but_Action" Padding="15,4" CornerRadius="10" Visibility="Hidden" HorizontalAlignment="Center">
                <TextBlock Foreground="White"><Run FontSize="20" FontFamily="Open Sans" Text="Pula corda" x:Name="lbl_Action"/></TextBlock>
            </Border>
            <Border Grid.Column="2" Background="White" x:Name="but_Next" MouseDown="but_Next_MouseDown"  Padding="15,4" Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Foreground="#FF09CAAA" VerticalAlignment="Center" HorizontalAlignment="Right"><Run x:Name="lbl_Next" FontSize="20" FontFamily="Open Sans" Text="Começar"/><Run FontSize="20" FontFamily="Open Sans" Text=" "/><Run FontSize="22" FontFamily="Wingdings" Text="Ø" x:Name="icn_Next"/></TextBlock>
            </Border>
        </UniformGrid>

    </DockPanel>
</Page>
