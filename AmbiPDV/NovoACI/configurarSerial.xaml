<Page x:Class="PDV_WPF.NovoACI.configurarSerial"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PDV_WPF.NovoACI"
      mc:Ignorable="d" 
      Title="configurarSerial" >

    <StackPanel Height="406" Width="493">
        <TextBlock TextWrapping="Wrap" Margin="15,15,15,10" FontSize="17"><Run Foreground="#FF09CAAA" FontWeight="Bold" Text="CONFIGURANDO A IMPRESSORA EM SÉRIE"/><LineBreak/><Run FontSize="14"/><LineBreak/><Run FontSize="14" Text="Vamos agora configurar sua impressora em série (serial). Para isso, certifique-se de que a impressora está corretamente conectada e os cabos estão devidamente afixados, tanto na impressora quanto na parte traseira do computador."/><LineBreak/><LineBreak/><Run FontSize="14" Text="Apenas as impressoras "/><Run FontStyle="Italic" FontSize="14" Text="Daruma D"/><Run FontStyle="Italic" FontSize="14" Text="R"/><Run FontStyle="Italic" FontSize="14" Text="-700"/><Run FontSize="14" Text=" e "/><Run FontStyle="Italic" FontSize="14" Text="DR-800"/><Run FontSize="14" Text=" estão homologadas para nosso sistema. Caso contráriom será necessário o uso de uma impressora USB."/><LineBreak/><LineBreak/><Run FontSize="14" Text="Preencha os valores abaixo e pressione "/><Run FontWeight="Bold" FontSize="14" Text="Testar"/><Run FontSize="14" Text=" pra validar a configuração."/></TextBlock>
        <Grid Height="68">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="0.4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="1">
                <Label Content="Porta" Margin="7, 0" />
                <ComboBox Margin="7, 0" Name="cbb_Ports"/>
            </StackPanel>
            <StackPanel Grid.Column="1"/>
            <StackPanel Grid.Column="3">
                <Label Content="Velocidade" Margin="7, 0" />
                <TextBox Margin="7, 0" Name="txb_velocidade" Text="115200" IsReadOnly="True"/>

            </StackPanel>
        </Grid>
        <UniformGrid Columns="3" VerticalAlignment="Center" Margin="10,0">
            <Border Grid.Column="0" Background="White" x:Name="but_Prev" Padding="15,4" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="but_Prev_MouseDown">
                <TextBlock Foreground="#FF09CAAA" VerticalAlignment="Center" HorizontalAlignment="Left"><Run FontSize="22" FontFamily="Wingdings" Text="×" x:Name="icn_Prev"/><Run FontSize="20" FontFamily="Open Sans" Text=" "/><Run FontSize="20" FontFamily="Open Sans" Text="Voltar" x:Name="lbl_Prev"/></TextBlock>
            </Border>
            <Border Grid.Column="1" Background="#FF09CAAA" x:Name="but_Action" Padding="15,4" CornerRadius="10" Visibility="Visible" HorizontalAlignment="Center" MouseDown="Button_Click">
                <TextBlock Foreground="White"><Run FontSize="20" FontFamily="Open Sans" Text="Testar" x:Name="lbl_Action"/></TextBlock>
            </Border>
            <Border Grid.Column="2" Background="White" x:Name="but_Next" Padding="15,4" Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Center" MouseDown="but_Next_MouseDown">
                <TextBlock x:Name="tbl_Continuar" Foreground="#6609CAAA" VerticalAlignment="Center" HorizontalAlignment="Right"><Run x:Name="lbl_Next" FontSize="20" FontFamily="Open Sans" Text="Continuar"/><Run FontSize="20" FontFamily="Open Sans" Text=" "/><Run FontSize="22" FontFamily="Wingdings" Text="Ø" x:Name="icn_Next"/></TextBlock>
            </Border>
        </UniformGrid>

    </StackPanel>
</Page>
