<Page x:Class="PDV_WPF.NovoACI.FimdeConfig"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PDV_WPF.NovoACI"
      mc:Ignorable="d" 
      Title="FimdeConfig" >

    <StackPanel Height="406" Width="493">
        <TextBlock TextWrapping="Wrap" Margin="15,15,15,10" FontSize="17" Height="342"><Run Foreground="#FF09CAAA" FontWeight="Bold" Text="FIM DA CONFIGURAÇÃO"/><LineBreak/><Run FontSize="14"/><LineBreak/><Run FontSize="14" Text="Pronto! Todas as configurações foram salvas com sucesso, e seu sistema está pronto para uso."/><LineBreak/><Run FontSize="14"/><LineBreak/><Run FontSize="14" Text="Caso necessite alterar alguma configuração posteriormente, simplesmente execute esse assistente novamente."/><LineBreak/><Run FontSize="14"/><LineBreak/><Run FontSize="14" Text="Obrigado por escolher o AmbiPDV. Bom trabalho, e boas vendas!"/></TextBlock>
        <UniformGrid Columns="3" VerticalAlignment="Center" Margin="10,0">
            <Border Grid.Column="0" Background="White" x:Name="but_Prev" Padding="15,4" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="but_Prev_MouseDown">
                <TextBlock Foreground="#FF09CAAA" VerticalAlignment="Center" HorizontalAlignment="Left"><Run FontSize="22" FontFamily="Wingdings" Text="×" x:Name="icn_Prev"/><Run FontSize="20" FontFamily="Open Sans" Text=" "/><Run FontSize="20" FontFamily="Open Sans" Text="Voltar" x:Name="lbl_Prev"/></TextBlock>
            </Border>
            <Border Grid.Column="1" Background="#FF09CAAA" x:Name="but_Action" Padding="15,4" CornerRadius="10" Visibility="Hidden" HorizontalAlignment="Center">
                <TextBlock Foreground="White"><Run FontSize="20" FontFamily="Open Sans" Text="Testar" x:Name="lbl_Action"/></TextBlock>
            </Border>
            <Border Grid.Column="2" Background="White" x:Name="but_Next" Padding="15,4" Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Center" MouseDown="but_Next_MouseDown">
                <TextBlock x:Name="tbl_Continuar" Foreground="#FF09CAAA" VerticalAlignment="Center" HorizontalAlignment="Right"><Run x:Name="lbl_Next" FontSize="20" FontFamily="Open Sans" Text="Continuar"/><Run FontSize="20" FontFamily="Open Sans" Text=" "/><Run FontSize="22" FontFamily="Wingdings" Text="Ø" x:Name="icn_Next"/></TextBlock>
            </Border>
        </UniformGrid>

    </StackPanel>
</Page>
