<Page x:Class="PDV_WPF.PCA_Telas.PCA_Spooler"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PDV_WPF.PCA_Telas"
      mc:Ignorable="d" 
      Title="PCA_Spooler" Loaded="Page_Loaded">

    <DockPanel Height="435" Width="493" LastChildFill="False">
        <TextBlock             TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Margin="10"
                   DockPanel.Dock="Top"><Run Foreground="#FF09CAAA" FontWeight="Bold" Text="CONFIGURANDO A IMPRESSORA USB"/><LineBreak/><Run FontSize="14"/><LineBreak/><Run FontSize="14" Text="Vamos agora configurar sua impressora USB!"/><LineBreak/><Run FontSize="14" Text="Antes de continuarmos, é necessário que seu software de impressão esteja previamente instalado. I"/><Run FontSize="14" Text="s"/><Run FontSize="14" Text="so é feito de acordo com as instruções fornecidas pelo fabricante da impressora."/><LineBreak/><Run FontWeight="Bold" FontSize="12" Text="Para mais informações, consulte o manual de sua impressora!..."/><LineBreak/><Run FontWeight="Bold" FontSize="11"/><LineBreak/><Run FontWeight="Bold" FontSize="14" Text="Caso ainda não tenha realizado este procedimento, "/><Run FontSize="14" Text="pressione o botão Minimizar e instale sua impressora."/><LineBreak/><LineBreak/><Run FontWeight="Bold" FontSize="14" Text="Caso já tenha realizado o procedimento, "/><Run FontSize="14" Text="selecione a impressora abaixo"/></TextBlock>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
            <Label Content="Impressora" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" FontFamily="Open Sans" FontSize="14"/>
            <ComboBox x:Name="cbb_printers" HorizontalAlignment="Center" VerticalAlignment="Center" Width="220" Margin="5,0,0,0" FontFamily="Open Sans" FontSize="14"/>
            </StackPanel>
        <Grid DockPanel.Dock="Bottom" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="White" x:Name="but_Prev" Padding="15,4" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="But_Prev_MouseDown">
                <TextBlock Foreground="#FF09CAAA" VerticalAlignment="Center" HorizontalAlignment="Left"><Run FontSize="22" FontFamily="Wingdings" Text="×" x:Name="icn_Prev"/><Run FontSize="20" FontFamily="Open Sans" Text=" "/><Run FontSize="20" FontFamily="Open Sans" Text="Voltar" x:Name="lbl_Prev"/></TextBlock>
            </Border>
            <Border Visibility="Visible" Grid.Column="1" Background="#FF09CAAA" x:Name="but_Action" Padding="15,4" CornerRadius="10" HorizontalAlignment="Center" MouseDown="But_Action_MouseDown">
                <TextBlock Foreground="White"><Run FontSize="20" FontFamily="Open Sans" Text="Testar" x:Name="lbl_Action"/></TextBlock>
            </Border>
            <Border Grid.Column="2" Background="White" x:Name="but_Next" Padding="15,4" Visibility="Visible" VerticalAlignment="Center" HorizontalAlignment="Center" MouseDown="But_Next_MouseDown">
                <TextBlock x:Name="tbl_Continuar" Foreground="#6609CAAA" VerticalAlignment="Center" HorizontalAlignment="Right"><Run x:Name="lbl_Next" FontSize="20" FontFamily="Open Sans" Text="Continuar"/><Run FontSize="20" FontFamily="Open Sans" Text=" "/><Run FontSize="22" FontFamily="Wingdings" Text="Ø" x:Name="icn_Next"/></TextBlock>
            </Border>
        </Grid>
    </DockPanel>
</Page>
