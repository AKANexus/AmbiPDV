<Window x:Class="PDV_WPF.Telas.SiTEFBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDV_WPF.Telas"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" Background="{x:Null}" WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="True" AllowsTransparency="True"
        Title="DialogBox" Height="820" Width="640" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Activated="Window_Activated" Closing="Window_Closing" KeyDown="Window_KeyDown" PreviewTextInput="Window_PreviewTextInput">

    <Border Margin="10,0" Background="#FFF9F9F9" CornerRadius="10" VerticalAlignment="Center" Padding="13">
        <Border.Effect>
            <DropShadowEffect BlurRadius="8" Opacity="0.8" Direction="300" ShadowDepth="1.5"/>
        </Border.Effect>
        <Grid Margin="0">
            <Grid.Background>
                <ImageBrush/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" x:Name="lbl_Title" HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Top" FontFamily="Open Sans Bold" FontSize="26" Foreground="#FF757575" Text="OPERAÇÃO NO TEF" TextWrapping="Wrap"/>
            <Image Name="icn_sitef" Visibility="Collapsed" Source="/AmbiPDV;component/Resources/sitef.png" Width="123" Height="123" Margin="0,-25" />
            <TextBlock Grid.Row="2" TextWrapping="Wrap" x:Name="tbl_Body" VerticalAlignment="Center" Margin="0" FontFamily="Open Sans SemiBold" FontSize="20" Foreground="#FF757575" TextAlignment="Center" Text=""/>
            <!--<Run x:Name="Linha1" Text="{Binding texto}"/>
                <LineBreak/>
                <Run x:Name="Linha2" Text=""/>
            </TextBlock>-->
        </Grid>
    </Border>
</Window>
