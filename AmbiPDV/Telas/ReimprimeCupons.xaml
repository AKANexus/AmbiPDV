                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <DatePicker HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Width="180" Name="dtp_DataInicial"/>
